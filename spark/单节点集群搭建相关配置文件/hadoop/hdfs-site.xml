<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
  <property>
    <name>dfs.replication</name>
    <value>2</value>
    <description>副本数量</description>
  </property>
  <property>
    <name>dfs.namenode.name.dir</name>
    <value>/opt/app/hadoop/data/name</value>
    <description>元数据目录</description>
  </property>
  <property>
    <name>dfs.datanode.data.dir</name>
    <value>/opt/app/hadoop/data/data</value>
    <description>datanode的数据目录</description>
  </property>
  <property>
    <name>dfs.secondary.http.address</name>
    <value>slave01:50090</value>
    <description>secondary的连接方式</description>
  </property>
</configuration>
